
@{
    ViewBag.Title = "Clientes";
}

<h3 class="text-center mb-3 mt-3 text-dark">Clientes</h3>

<div class="row">
    <div class="col-12">
        <a href="/cliente/cadastro" class="btn btn-dark float-right mb-3">
            <i class="fas fa-plus"></i> Novo Cliente
        </a>
    </div>
</div>


<table class="table table-striped table-hover table-bordered">

    <thead>
        <tr>
            <th>Código</th>
            <th>Cidade</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Nascimento</th>
            <th>Complemento</th>
            <th>Loradouro</th>
            <th>CEP</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Cidade</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Nascimento</th>
            <th>Complemento</th>
            <th>Loradouro</th>
            <th>CEP</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Cliente cliente in ViewBag.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.IdCidade</td>
                <td>@cliente.Nome</td>
                <td>@cliente.CPF</td>
                <td>@cliente.DataNascimento</td>
                <td>@cliente.Complemento</td>
                <td>@cliente.Logradouro</td>
                <td>@cliente.CEP</td>
                <td>
                    <a href="/cliente/editar?id=@cliente.Id" class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>
                    <a href="/cliente/apagar?id=@cliente.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>