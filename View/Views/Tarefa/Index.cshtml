
@{
    ViewBag.Title = "Tarefas";
}

<h3>Tarefas</h3>

<div class="row mb-3">
    <div class="col-12">
        <a href="/tarefa/cadastro" class="btn btn-primary float-right"><i class="fas fa-plus"></i> Nova Tarefa</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="bg-primary">
        <tr>
            <th>Código</th>
            <th>Código do Usuário</th>
            <th>Código do Projeto</th>
            <th>Código da Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot class="bg-primary">
        <tr>
            <th>Código</th>
            <th>Código do Usuário</th>
            <th>Código do Projeto</th>
            <th>Código da Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Tarefa tarefa in ViewBag.Tarefas)
        {
            <tr>
                <td>@tarefa.Id</td>
                <td>@tarefa.IdUsuarioResponsavel</td>
                <td>@tarefa.IdProjeto</td>
                <td>@tarefa.IdCategoria</td>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.Duracao</td>
            </tr>
        }
    </tbody>
</table>
