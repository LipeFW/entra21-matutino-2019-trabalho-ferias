
@{
    ViewBag.Title = "Editar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    <form action="/cidade/editar/" method="post">
        <div>
            <label for="campo-nome">Nome</label>
            <input type="text" name="nome" id="campo-nome" value="@ViewBag.Cidade.Nome" />
        </div>
        <div>
            <label for="campo-habitantes">Número de Habitantes</label>
            <input type="text" name="habitantes" id="campo-habitantes" value="@ViewBag.Cidade.NumeroHabitantes" />
        </div>
        <div>
            <label for="campo-estado">Estado</label>
            <select name="estado">
                <option disabled="disabled" selected="selected">Selecione um estado</option>
                @foreach (Model.Estado estado in ViewBag.Estados)
                {
                    <option value="@estado.Id">@estado.Nome</option>
                }
            </select>
        </div>
        <input type="hidden" name="id" value="@ViewBag.Cidade.Id" />
        <button type="submit">Salvar</button>
    </form>
</body>
</html>


