
@{
    ViewBag.Title = "Estados";
}

<h3>Estados</h3>

<div class="row mb-3">
    <div class="col-12">
        <a href="/estado/cadastro" class="btn btn-primary float-right">
            <i class="fas fa-plus"></i> Novo Estado
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="bg-primary">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot class="bg-primary">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Estado estado in ViewBag.Estados)
        {
        <tr>
            <td>@estado.Id</td>
            <td>@estado.Nome</td>
            <td>@estado.Sigla</td>
        </tr>
        }
    </tbody>
</table>