
@{
    ViewBag.Title = "Projetos";
}

<h3 class="text-center mb-3 mt-3 text-dark">Projetos</h3>

<div class="row">
    <div class="col-12">
        <a href="/projeto/cadastro" class="btn btn-dark float-right mb-3">
            <i class="fas fa-plus"></i> Novo Projeto
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Código Cliente</th>
            <th>Nome</th>
            <th>Data Criação</th>
            <th>Data Finalização</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Código Cliente</th>
            <th>Nome</th>
            <th>Data Criação</th>
            <th>Data Finalização</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Projeto projeto in ViewBag.Projetos)
        {
            <tr>
                <td>@projeto.Id</td>
                <td>@projeto.IdCliente</td>
                <td>@projeto.Nome</td>
                <td>@projeto.DataCriacao</td>
                <td>@projeto.DataFinalizacao</td>
                <td>
                    <a href="/projeto/editar?id=@projeto.Id" class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>
                    <a href="/projeto/apagar?id=@projeto.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>