
@{
    ViewBag.Title = "Tarefas";
}

<h3 class="text-center mb-3 mt-3 text-dark">Tarefas</h3>

<div class="row">
    <div class="col-12">
        <a href="/tarefa/cadastro" class="btn btn-dark float-right mb-3">
            <i class="fas fa-plus"></i> Nova Tarefa
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Código do Usuário</th>
            <th>Código do Projeto</th>
            <th>Código da Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Código do Usuário</th>
            <th>Código do Projeto</th>
            <th>Código da Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Tarefa tarefa in ViewBag.Tarefas)
        {
            <tr>
                <td>@tarefa.Id</td>
                <td>@tarefa.IdUsuarioResponsavel</td>
                <td>@tarefa.IdProjeto</td>
                <td>@tarefa.IdCategoria</td>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.Duracao</td>
                <td>
                    <a href="/tarefa/editar?id=@tarefa.Id" class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>
                    <a href="/tarefa/apagar?id=@tarefa.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
