
@{
    ViewBag.Title = "Cadastro Usuário";
}

    <h3 class="text-center mb-3 mt-3 text-dark">Cadastro de Usuários</h3>

<form method="post" action="/usuario/store">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nomeusuario">Nome</label>
                <input type="text" name="nome" id="campo-nomeusuario" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-login">Login</label>
                <input type="text" name="login" id="campo-login" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-senha">Senha</label>
                <input type="password" name="senha" id="campo-senha" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>
    </div>
</form>

