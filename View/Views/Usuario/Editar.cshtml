
@{
    ViewBag.Title = "Editar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    <form action="/usuario/editar/" method="post">
        <div>
            <label for="campo-nomeusuario">Nome</label>
            <input type="text" name="nomeusuario" id="campo-nomeusuario" value="@ViewBag.Usuario.Nome" />
        </div>
        <div>
            <label for="campo-login">Login</label>
            <input type="text" name="login" id="campo-login" value="@ViewBag.Usuario.Login" />
        </div>
        <div>
            <label for="campo-senha">Senha</label>
            <input type="text" name="senha" id="campo-senha" value="@ViewBag.Usuario.Senha" />
        </div>
        <input type="hidden" name="id" value="@ViewBag.Usuario.Id" />
        <button type="submit">Salvar</button>
    </form>
</body>
</html>

